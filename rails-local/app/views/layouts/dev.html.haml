!!!
%html.chrometwo.legacyfalse{"xmlns:ng" => "http://angularjs.org"}
    %head
        %title= $lab_name
        %script{:src => "#{$lab_context}/js/dev/require.js", :type => "text/javascript"}
        %script{:src => "#{$lab_context}/js/dev/loader.js?#{$lab_cache_buster}", :type => "text/javascript"}

        = stylesheet_link_tag 'application', :media => "all"
        = csrf_meta_tags

    %body.chrometwo
        #chrometwo
            #chromed-app-content.container
                %div{"ng-controller" => "mainCtrl","id" => "ctrl","ng-style" => "appShow",:style => "visibility: hidden;"}
                    %h1
                        = $lab_name
                    = yield
                :javascript
                    window.breadcrumbs = [["Labs", "/labs/"], ["#{$lab_name}", "#{$lab_context}"]];
